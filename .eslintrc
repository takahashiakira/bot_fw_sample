{
  "extends": ["eslint:recommended", "google"],
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "no-unused-vars" : 2,
    "no-undef" : 2,
    "no-underscore-dangle": 0,
    "prefer-template": 0,
    "object-shorthand": 0,
    "comma-dangle": 0,
    "arrow-body-style": 0,
    "no-console": 0,
    "func-names": 0,
    "no-param-reassign": 0
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
